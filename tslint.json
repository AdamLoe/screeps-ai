{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "object-literal-sort-keys": false,
    "one-variable-per-declaration": false,
    "only-arrow-functions": false,
    "max-classes-per-file": false,
    "max-line-length": [
      true,
      120
    ],
    "member-access": [
      true,
      "no-public"
    ],
    "member-ordering": [
      false
    ],
    "no-console": [
      false
    ],
    "prefer-const": [
      true,
      {
        "destructuring": "all"
      }
    ],
    "quotemark": [
      true,
      "single"
    ],
    "forin": false,
    "whitespace": [
      true,
      "check-rest-spread"
    ]
  }
}
